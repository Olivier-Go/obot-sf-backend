{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container my-auto">
        <div class="row justify-content-center">
            <div class="col col-md-6 col-lg-4 my-auto text-center">
                <img src="{{ asset('build/images/bot.svg') }}" width="60" height="60" alt="ccxt-quant-bot">
                <h1 class="text-primary mb-4">Connexion</h1>
                <form class="row g-3 needs-validation {% if error %}was-validated{% endif %}" data-controller="field-validation" data-field-validation-target="form" action="{{ path('login') }}" method="post" novalidate>
                    <div class="form-floating">
                        <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" required data-action="input->field-validation#validate">
                        <label class="form-label" for="username">Email:</label>
                        <div class="invalid-feedback">
                            Veuilez entrer une adresse email valide
                        </div>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="password" name="_password" required data-action="input->field-validation#validate">
                        <label for="password">Mot de passe:</label>
                    </div>
                    <div class="form-floating mb-2">
                        <div class="form-check form-switch d-flex justify-content-start">
                            <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me" checked>
                            <label class="form-check-label text-primary h6 mx-2 mb-0 mt-1 lh-1" for="remember_me">Se souvenir de moi</label>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {# If you want to control the URL the user is redirected to on success
                        <input type="hidden" name="_target_path" value="/account"/> #}
                    <div class="col-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-lg">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
