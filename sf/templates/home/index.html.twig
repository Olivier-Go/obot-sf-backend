{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container-fluid mb-auto">
        <div class="row">
            <div class="col p-3">
                <h1 class="text-primary text-center mb-3">/</h1>
                <div class="row row-cols-1 row-cols-md-2 g-4" data-controller="tabbable">
                    <div class="col col-lg-3">
                        <div class="card border-primary h-100">
                            <div class="d-flex align-items-start h-100">
                                <div class="card-header-rounder-2 bg-dark h-100">
                                    <div class="nav flex-column nav-pills p-2" role="tablist">
                                        {% for ticker in tickers %}
                                            <button class="nav-link tabbable text-white {% if loop.last %}active{% endif %}" data-action="tabbable#show" data-class=".tabbable-{{ ticker.name|lower|replace({'/': '-'}) }}" type="button" role="tab">{{ ticker.name }}</button>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="card-body bg-secondary bg-opacity-10 overflow-hidden h-100 p-2">
                                    <div class="tab-content" id="v-pills-tabContent">
                                        {% for ticker in tickers %}
                                            {% dump(ticker) %}
                                            <div class="tab-pane tabbable-pane tabbable-{{ ticker.name|lower|replace({'/': '-'}) }} {% if loop.last %}fade-in active show{% endif %}" role="tabpanel">
                                                <h2>{{ ticker.market.name }}</h2>
                                                <div class="text-primary"><i class="bi bi-arrow-repeat me-2"></i><small>{{ ticker.time|date('d/m/Y-H:i:s') }}</small></div>
                                                <div class="my-3">
                                                    <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                                        <p class="mb-0">Volume:</p>
                                                        <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-secondary mb-0">
                                                                {{ ticker.volume|number_format(0)  }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                                        <p class="mb-0">Prix:</p>
                                                        <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-primary mb-0">
                                                                {{ ticker.last|number_format(2)  }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                                        <p class="mb-0">Moyenne:</p>
                                                        <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-info mb-0">
                                                                {{ ticker.averagePrice|number_format(2)  }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                                        <p class="mb-0">Bas:</p>
                                                        <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-danger mb-0">
                                                                {{ ticker.low|number_format(2)  }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                                        <p class="mb-0">Haut:</p>
                                                        <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-success mb-0">
                                                                {{ ticker.high|number_format(2)  }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col col-lg-9">
                        <div class="card border-primary h-100 overflow-hidden">
                            <div class="tab-content">
                                {% for ticker in tickers %}
                                    {#<div class="tab-pane fade {% if loop.first %}active show{% endif %}" id="{{ ticker.name|lower|replace({'/': '-'}) }}" role="tabpanel">
                                        <iframe
                                                name="tradingview_chart"
                                                src="https://charts.cointrader.pro/charts.html?coin={{ ticker.tvChartTickerId }}"
                                                allowtransparency="true"
                                                allow="fullscreen"
                                                width="100%"
                                                height="500px"
                                        >
                                        </iframe>
                                    </div>#}
                                    <div class="tab-pane tabbable-pane tabbable-{{ ticker.name|lower|replace({'/': '-'}) }} {% if loop.last %}fade-in active show{% endif %}" role="tabpanel">
                                        <div class="tradingview-widget-container"
                                             data-controller="tradingview"
                                             data-tradingview-id-value="tradingview_{{ ticker.name|lower|replace({'/': '-'}) }}"
                                             data-tradingview-ticker-value="{{ ticker.tvChartTickerId }}"
                                        >
                                            <div id="tradingview_{{ ticker.name|lower|replace({'/': '-'}) }}"></div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}