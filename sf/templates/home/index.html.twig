{% extends 'base.html.twig' %}

{% block title %}Données de marché{% endblock %}

{% block body %}
    <div class="container-fluid mb-auto">
        <div class="row">
            <div class="col p-3">
                <h1 class="h2 text-primary text-center mb-3">Données de marché</h1>
                <turbo-frame id="ticker_data" src="{{ path('ticker_data') }}">
                    <div class="row row-cols-1 row-cols-md-2 g-4" data-controller="tabbable">
                        <div class="col col-lg-4">
                            <div class="card border-primary border-rounder-full bg-dark h-100">
                                <div class="d-flex justify-content-center align-items-center ticker-loading">
                                    <div class="spinner-border spinner-loading text-primary" role="status">
                                        <span class="visually-hidden">Chargement...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col col-lg-8">
                            <div class="card border-primary bg-dark border-rounder-full overflow-hidden">
                                <div class="d-flex justify-content-center align-items-center ticker-loading">
                                    <div class="spinner-border spinner-loading text-primary" role="status">
                                        <span class="visually-hidden">Chargement...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </turbo-frame>
            </div>
        </div>
    </div>
{% endblock %}