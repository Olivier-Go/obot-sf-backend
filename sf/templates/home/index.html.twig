{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container-fluid mb-auto">
        <div class="row">
            <div class="col p-3">
                <h1 class="text-primary text-center mb-3">/</h1>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <div class="col col-lg-3">
                        <div class="card border-primary h-100">
                            <div class="d-flex align-items-start h-100">
                                <div class="card-header-rounder-2 bg-dark h-100">
                                    <div class="nav flex-column nav-pills p-2" role="tablist">
                                        {% for ticker in tickers %}
                                            <button class="nav-link text-white {% if loop.first %}active{% endif %}" data-bs-toggle="pill" data-bs-target="#{{ ticker.name|lower|replace({'/': '-'}) }}" type="button" role="tab">{{ ticker.name }}</button>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="card-body p-2">
                                    <div class="tab-content" id="v-pills-tabContent">
                                        {% for ticker in tickers %}
                                            {% dump(ticker) %}
                                            <div class="tab-pane fade {% if loop.first %}active show{% endif %}" role="tabpanel">
                                                <h2>{% if ticker.symbol is defined %}{{ ticker.symbol }}{% endif %}</h2>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col col-lg-9">

                            <div class="tab-content">
                                {% for ticker in tickers %}
                                    {#<div class="tab-pane fade {% if loop.first %}active show{% endif %}" id="{{ ticker.name|lower|replace({'/': '-'}) }}" role="tabpanel">
                                        <iframe
                                                name="tradingview_chart"
                                                src="https://charts.cointrader.pro/charts.html?coin={{ ticker.tvChartTickerId }}"
                                                allowtransparency="true"
                                                allow="fullscreen"
                                                width="100%"
                                                height="500px"
                                        >
                                        </iframe>
                                    </div>#}
                                    <div class="tab-pane fade {% if loop.first %}active show{% endif %}" id="{{ ticker.name|lower|replace({'/': '-'}) }}" role="tabpanel">
                                        <div class="tradingview-widget-container"
                                             data-controller="tradingview"
                                             data-tradingview-id-value="tradingview_{{ ticker.name|lower|replace({'/': '-'}) }}"
                                             data-tradingview-ticker-value="{{ ticker.tvChartTickerId }}"
                                        >
                                            <div id="tradingview_{{ ticker.name|lower|replace({'/': '-'}) }}"></div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}