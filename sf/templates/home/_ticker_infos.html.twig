<div class="col col-lg-4">
    <div class="card border-primary h-100">
        <div class="d-flex align-items-start h-100">
            <div class="card-header-rounder-2 bg-dark h-100">
                <div class="nav flex-column nav-pills p-2" role="tablist">
                    {% for ticker in tickers %}
                        <button class="nav-link tabbable text-white {% if loop.first %}active{% endif %}" data-action="tabbable#show" data-class=".tabbable-{{ ticker.name|lower|replace({'/': '-'}) }}" type="button" role="tab">{{ ticker.name }}</button>
                    {% endfor %}
                </div>
            </div>
            <div class="card-body bg-secondary bg-opacity-10 overflow-hidden h-100 p-2">
                <div class="tab-content" id="v-pills-tabContent">
                    {% for ticker in tickers %}
                        <div class="tab-pane tabbable-pane tabbable-{{ ticker.name|lower|replace({'/': '-'}) }} {% if loop.first %}fade-in active show{% endif %}" role="tabpanel">
                            <h2>{{ ticker.market.name|capitalize }}</h2>
                            <div class="text-primary"><i class="bi bi-arrow-repeat me-2"></i><small>{{ ticker.time|date('d/m/Y-H:i:s') }}</small></div>
                            <div class="my-3">
                                <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                    <p class="mb-0">Volume:</p>
                                    <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-secondary mb-0">
                                                                {{ ticker.volume|number_format(0, ',', ' ')  }}
                                                            </span>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                    <p class="mb-0">Prix:</p>
                                    <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-primary mb-0">
                                                                {{ ticker.last|number_format(2, ',', ' ')  }}
                                                            </span>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                    <p class="mb-0">Moyenne:</p>
                                    <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-info mb-0">
                                                                {{ ticker.averagePrice|number_format(2, ',', ' ')  }}
                                                            </span>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                    <p class="mb-0">Bas:</p>
                                    <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-danger mb-0">
                                                                {{ ticker.low|number_format(2, ',', ' ')  }}
                                                            </span>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap justify-content-between align-items-center my-2">
                                    <p class="mb-0">Haut:</p>
                                    <div class="h5 ms-2 mb-0">
                                                            <span class="d-inline-block h5 badge bg-success mb-0">
                                                                {{ ticker.high|number_format(2, ',', ' ')  }}
                                                            </span>
                                    </div>
                                </div>
                            </div>
                            {% if ticker.market.balance is not empty %}
                                <hr>
                                <div class="mt-1">
                                    <p class="h4">Balance :</p>
                                    {% for balance in ticker.market.balance.info.data %}
                                        {%  if balance.currency in ticker.name %}
                                            <div class="d-flex flex-wrap justify-content-between align-items-center border-rounder-full shadow-sm bg-light my-2">
                                                <p class="my-2 mx-4"><strong class="text-primary">{{ balance.currency }}</strong></p>
                                                <ul class="list-group list-group-flush flex-grow-1">
                                                    {% if balance.type is defined %}
                                                        <li class="list-group-item py-1 d-flex justify-content-between align-items-center">
                                                            Type:
                                                            <strong>{{ balance.type }}</strong>
                                                        </li>
                                                    {% endif %}
                                                    {% if balance.balance is defined %}
                                                        <li class="list-group-item py-1 d-flex justify-content-between align-items-center">
                                                            Balance:
                                                            <strong>{{ balance.balance }}</strong>
                                                        </li>
                                                    {% endif %}
                                                    {% if balance.available is defined %}
                                                        <li class="list-group-item py-1 d-flex justify-content-between align-items-center">
                                                            Dispo:
                                                            <strong>{{ balance.available }}</strong>
                                                        </li>
                                                    {% endif %}
                                                    {% if balance.holds is defined %}
                                                        <li class="list-group-item py-1 d-flex justify-content-between align-items-center">
                                                            Réservé:
                                                            <strong>{{ balance.holds }}</strong>
                                                        </li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>