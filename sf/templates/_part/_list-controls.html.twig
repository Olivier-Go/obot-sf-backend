<div class="d-flex flex-wrap justify-content-between align-items-center mb-1">
    <div class="d-flex align-items-center pr-2 border-right">
        {{ include('_part/_export.html.twig') }}
        <small class="ms-1 ps-2 border-start border-2 d-md-block d-print-block d-none">
            Nombre total d'éléments: <strong>{{ pagination.getTotalItemCount }}</strong>
        </small>
    </div>
    <small class="d-flex flex-nowrap align-items-center pl-2">
        <label for="maxItemPerPage" class="my-0 me-2 d-md-block d-print-block d-none">Elements par page</label>
        <select style="width: 4.5rem;"
                class="form-select form-select-sm py-0 me-1"
                name="maxItemPerPage" id="maxItemPerPage"
                data-controller="pagination"
                data-pagination-url-value="{{ path(app.request.attributes.get('_route'), {'maxItemPerPage' : '_itemNum'}) }}"
                data-action="pagination#change"
        >
            <option value="20" {% if pagination.getItemNumberPerPage == 20 %}selected="selected"{% endif %}>20</option>
            <option value="50" {% if pagination.getItemNumberPerPage == 50 %}selected="selected"{% endif %}>50</option>
            <option value="100" {% if pagination.getItemNumberPerPage == 100 %}selected="selected"{% endif %}>100</option>
            <option value="200" {% if pagination.getItemNumberPerPage == 200 %}selected="selected"{% endif %}>200</option>
            <option value="500" {% if pagination.getItemNumberPerPage == 500 %}selected="selected"{% endif %}>500</option>
        </select>
    </small>
</div>