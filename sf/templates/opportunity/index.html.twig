{% extends 'base.html.twig' %}

{% block title %}Opportunités d'arbitrage{% endblock %}

{% block body %}
    <div class="container-fluid mb-auto">
        <div class="row">
            <div class="col p-3">
                <h2 class="text-primary text-center mb-3">Opportunités d'arbitrage</h2>
                <div class="card border-primary overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-light table-striped table-bordered border-secondary mb-0">
                            <thead class="table-secondary">
                            <tr>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, '#', 'o.id') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Received', 'o.received') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Ticker', 'ticker.name') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Direction', 'o.direction') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Price diff', 'o.priceDiff') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Buy market', 'buyMarket.name') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Buy price', 'o.buyPrice') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Sell market', 'sellMarket.name') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Sell price', 'o.sellPrice') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Size', 'o.size') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(opportunities, 'Created', 'o.created') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for opportunity in opportunities %}
                                <tr>
                                    <th scope="row">{{ opportunity.id }}</th>
                                    <td>{{ opportunity.received|date('d/m/Y H:i:s') }}</td>
                                    <td>{{ opportunity.ticker.name }}</td>
                                    <td><span class="text-{{ opportunity.direction == 'Sell->Buy' ? 'danger' : 'success' }}">{{ opportunity.direction }}</span></td>
                                    <td>{{ opportunity.priceDiff }}</td>
                                    <td>{{ opportunity.buyMarket.name }}</td>
                                    <td>{{ opportunity.buyPrice }}</td>
                                    <td>{{ opportunity.sellMarket.name }}</td>
                                    <td>{{ opportunity.sellPrice }}</td>
                                    <td>{{ opportunity.size }}</td>
                                    <td>{{ opportunity.created|date('d/m/Y H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <small class="ms-1">Nombre d'opérations: <strong>{{ opportunities.getTotalItemCount }}</strong></small>
                <div class="navigation d-flex justify-content-center my-3">
                    {{ knp_pagination_render(opportunities) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}