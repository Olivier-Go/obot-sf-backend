{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ClientOrderId</th>
                <th>Opened</th>
                <th>LastTrade</th>
                <th>Status</th>
                <th>Type</th>
                <th>Side</th>
                <th>Price</th>
                <th>Average</th>
                <th>Amount</th>
                <th>Filled</th>
                <th>Remaining</th>
                <th>Cost</th>
                <th>Fees</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.clientOrderId }}</td>
                <td>{{ order.opened ? order.opened|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.lastTrade ? order.lastTrade|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.status }}</td>
                <td>{{ order.type }}</td>
                <td>{{ order.side }}</td>
                <td>{{ order.price }}</td>
                <td>{{ order.average }}</td>
                <td>{{ order.amount }}</td>
                <td>{{ order.filled }}</td>
                <td>{{ order.remaining }}</td>
                <td>{{ order.cost }}</td>
                <td>{{ order.fees ? order.fees|json_encode : '' }}</td>
                <td>{{ order.created ? order.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.updated ? order.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
